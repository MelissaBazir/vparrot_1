{% extends "base.html.twig" %}

{% block title %}Garage V. PARROT - Modification de l'avis{% endblock %}

{% block body %}
    <div class="container">

        
        <h1 class= "mt-4">Modification d'un avis</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4">
          <button type="button" class="btn btn-primary px-4 me-md-2">Retourner Ã  la liste des avis</button>
        </div>

        {# form errors management #}
        {{ form_start(form) }}
        

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
            
        </div>

        <div class="form-group">
            {{ form_label(form.reviewText) }}
            {{ form_widget(form.reviewText) }}
            <div class="form-error">
                {{ form_errors(form.reviewText) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.score) }}
            {{ form_widget(form.score) }}
            <div class="form-error">
                {{ form_errors(form.score) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_row(form.submit) }}
        </div>

        
            
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}